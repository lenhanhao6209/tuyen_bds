<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Trang
                    chủ</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/reccent' ? 'active' : '' %>"
                    href="/reccent">BĐS vừa xem</a>
            </li>
            <% if (isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/user/add-product' ? 'active' : '' %>"
                        href="/user/add-product">Thêm BĐS
                    </a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/user/products' ? 'active' : '' %>"
                        href="/user/products">BĐS của bạn
                    </a>
                </li>
                <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>"
                        href="/login">Đăng nhập</a>
                </li>
                <% } else { %>
                    <li class="main-header__item">
                        <p class="active">Xin chào,
                            <%= name %>!!!
                        </p>
                    </li>
                    <li class="main-header__item">
                        <form action="/logout" method="post">
                            <input type="hidden" name="_csrf"
                                value="<%= csrfToken %>">
                            <button type="submit">Đăng xuất</button>
                        </form>
                    </li>
                    <% } %>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/">Trang
                chủ</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/reccent' ? 'active' : '' %>"
                href="/reccent">BĐS vừa xem</a>
        </li>
        <% if (isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/user/add-product' ? 'active' : '' %>"
                    href="/user/add-product">Thêm BĐS
                </a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/user/products' ? 'active' : '' %>"
                    href="/user/products">BĐS của bạn
                </a>
            </li>
            <% } %>
                <% if (!isAuthenticated) { %>
                    <li class="mobile-nav__item">
                        <a class="<%= path === '/login' ? 'active' : '' %>"
                            href="/login">Login</a>
                    </li>
                    <% } else { %>
                        <li class="mobile-nav__item">
                            <form action="/logout" method="post">
                                <input type="hidden" name="_csrf"
                                    value="<%= csrfToken %>">
                                <button type="submit">Logout</button>
                            </form>
                        </li>
                        <% } %>
    </ul>
</nav>
<script src="/js/filter.js"></script>